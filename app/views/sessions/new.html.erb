<div class="container">
		<div class="content">
			<div class="row">
				<div class="login-form">
					<h2>Login</h2>
					<%= form_tag sessions_path do %>
						<fieldset>
							<div class="clearfix">
							 	<%=label_tag :email %><br/>
 								<%= text_field_tag :email, params[:email] %>
							</div>
							<div class="clearfix">
								<%=label_tag :passwoord %> <br/>
 								<%= password_field_tag :password%> <br/>
							</div>
								<%= submit_tag nil, :class => 'btn btn-primary' %>
					  </fieldset>
				 <% end %>
				</div>
			</div>
		</div>
	</div>